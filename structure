#include<stdio.h>
struct employee
{
    int age,phone_number,salary;
    char name[25];
}emp[20];
int main()
{
   int i;
   for(i=0;i<3;i++)
    { 
	printf("Enter employee info as Name,Age,Phone Number,Salary\n");
    scanf("%s\n%d\n%d\n%d",emp[i].name,&emp[i].age,&emp[i].phone_number,&emp[i].salary);
    }
    printf("Name\tAge\tPhone Number\tSalary\n");
    for(i=0;i<3;i++)
    {
    printf("%s\t%d\t%d\t%d\n",emp[i].name,emp[i].age,emp[i].phone_number,emp[i].salary);
    }
}
